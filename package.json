{
  "name": "smart-invoice",
  "version": "0.1.0",
  "keywords": [
    "ethereum",
    "smart-invoice",
    "escrow",
    "workspaces",
    "yarn"
  ],
  "private": true,
  "scripts": {
    "mono-subgraph:auth": "yarn workspace @smart-invoice/mono-subgraph auth",
    "mono-subgraph:codegen": "yarn workspace @smart-invoice/mono-subgraph codegen",
    "mono-subgraph:build": "yarn workspace @smart-invoice/mono-subgraph build",
    "mono-subgraph:deploy-kovan": "yarn workspace @smart-invoice/mono-subgraph deploy-kovan",
    "mono-subgraph:deploy-rinkeby": "yarn workspace @smart-invoice/mono-subgraph deploy-rinkeby",
    "factory-subgraph:auth": "yarn workspace @smart-invoice/factory-subgraph auth",
    "factory-subgraph:codegen": "yarn workspace @smart-invoice/factory-subgraph codegen",
    "factory-subgraph:build": "yarn workspace @smart-invoice/factory-subgraph build",
    "factory-subgraph:deploy-kovan": "yarn workspace @smart-invoice/factory-subgraph deploy-kovan",
    "factory-subgraph:deploy-rinkeby": "yarn workspace @smart-invoice/factory-subgraph deploy-rinkeby",
    "dapp:start": "yarn workspace @smart-invoice/dapp start",
    "dapp:build": "yarn workspace @smart-invoice/dapp build",
    "contracts:build": "yarn workspace @smart-invoice/contracts build",
    "contracts:lint": "yarn workspace @smart-invoice/contracts lint",
    "contracts:test": "yarn workspace @smart-invoice/contracts test",
    "contracts:deploy-kovan": "yarn workspace @smart-invoice/contracts deploy-kovan",
    "format": "prettier --ignore-path .gitignore --write \"{*,**/*}.{ts,tsx,js,jsx,json,yml,yaml,md,sol}\""
  },
  "workspaces": {
    "nohoist": [
      "**/@graphprotocol/graph-ts",
      "**/@graphprotocol/graph-ts/**",
      "**/@nomiclabs/**",
      "**/solidity-coverage",
      "**/bulma"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "async-prompt": "^1.0.1",
    "base-58": "^0.0.1",
    "buffer": "^5.6.0",
    "cids": "^1.0.0",
    "dotenv": "^8.2.0",
    "ethers": "^5.0.19",
    "husky": "^4.2.5",
    "ipfs-http-client": "^47.0.1",
    "it-all": "^1.0.2",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.59",
    "uint8arrays": "^1.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,yml,yaml,md,sol}": "prettier --write"
  }
}
